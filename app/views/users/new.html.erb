<%= render 'shared/header', header: "Register" %>
<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
	<%= f.label :username %>
	<%= f.text_area :username %>
	<br>
	<%= f.label :email %>
	<%= f.text_area :email %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<%= f.submit "Signup" %>

<% end %>
